<div class="container">
	<div class="well">
		<%= form_for @user do |f| %>
			<fieldset>
				<legend>Manage your Record Label
					<%= render 'shared/error_messages' %>

					<div class="form-group">
						<%= f.label :labelName, "Label Name", class: "col-md-2 control-label" %>
						<%= f.text_field :labelName, placeholder: "Label Name", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :labelScene, "Label Scene", class: "col-md-2 control-label" %>
						<%= f.text_field :labelScene, placeholder: "Label Scene", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :bandOne, "Band One", class: "col-md-2 control-label" %>
						<%= f.text_field :bandOne, placeholder: "Band One", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :bandTwo, "Band Two", class: "col-md-2 control-label" %>
						<%= f.text_field :bandTwo, placeholder: "Band Two", class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :bandThree, "Band Three", class: "col-md-2 control-label" %>
						<%= f.text_field :bandThree, placeholder: "Band Three", class: "form-control" %>
					</div>
					<div class="form-group">
						<div class="col-md-10 col-md-offset-2">
							<div class="pull-right">
								<%= f.submit "Submit", class: "btn btn-primary" %>
								&nbsp;
								<button class="btn btn-default"><%= link_to "Cancel", root_path %></button> 
							</div>
						</div>
					</div>
				</legend>
			</fieldset>
		<% end %>
	</div>
</div>